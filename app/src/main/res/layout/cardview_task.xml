<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:id="@+id/linearContainerCardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/cardviewblue">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageViewEditTask"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit_white"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="left|center">

        <TextView
            android:id="@+id/textViewTitlePostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="TITLE OF TASK"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewDescriptionPostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:maxLines="2"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:text="Description of task"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <CheckBox
            android:id="@+id/checkboxTask"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/textViewHourPostCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Hour"/>

        <TextView
            android:id="@+id/textViewDatePostCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>